{
  "name": "contextcraft",
  "version": "1.0.7",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "dev:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 node scripts/dev.js",
    "dev:c++20": "node scripts/dev-with-c++20.js",
    "build": "vite build",
    "build-electron": "node scripts/build.js",
    "verify-build": "node scripts/verify-build.js",
    "test-build": "node scripts/test-local-build.js",
    "test-build:mac": "node scripts/test-local-build.js mac",
    "test-build:mac-full": "node scripts/test-local-mac-build.js",
    "test-build:mac-no-sign": "node scripts/test-local-mac-build.js --skip-signing",
    "test-build:win": "node scripts/test-local-build.js win",
    "test-build:linux": "node scripts/test-local-build.js linux",
    "test-build:cross": "node scripts/cross-platform-build.js",
    "test-all": "npm test && npm run rebuild-native-modules && npm run test-build:mac && npm run test-build:win",
    "test-comprehensive": "node scripts/test-comprehensive.js",
    "debug-gh-release": "git tag debug-v$(date +'%Y%m%d%H%M%S') && git push origin --tags",
    "diagnose-mac": "node scripts/diagnose-build.js",
    "cleanup": "node scripts/cleanup-builds.js",
    "package": "npm run cleanup && vite build && electron-builder --publish=never",
    "package:mac": "npm run cleanup && node scripts/mac-build.js",
    "package:win": "npm run cleanup && node scripts/windows-build.js",
    "package:linux": "npm run cleanup && vite build && electron-builder --linux --publish=never",
    "package:all": "npm run cleanup && vite build && electron-builder -mwl --publish=never",
    "release": "npm run cleanup && vite build && electron-builder --publish=onTagOrDraft",
    "postinstall": "electron-builder install-app-deps",
    "rebuild-native-modules": "node scripts/rebuild-native-modules.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:strict": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "clipboard",
    "code",
    "developer-tools",
    "electron",
    "file-viewer"
  ],
  "author": {
    "name": "flight505",
    "email": "jesper_vang@me.com"
  },
  "license": "MIT",
  "description": "A modern file viewer application for developers to easily navigate, search, and copy code from repositories.",
  "build": {
    "appId": "com.contextcraft.app",
    "productName": "ContextCraft",
    "directories": {
      "output": "release-builds",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "minimatch/**",
          "brace-expansion/**",
          "balanced-match/**",
          "ignore/**",
          "micromatch/**",
          "braces/**",
          "fill-range/**",
          "to-regex-range/**",
          "is-number/**",
          "picomatch/**",
          "chokidar/**",
          "tree-sitter*/**",
          "jsdom/**",
          "dompurify/**",
          "tiktoken/**",
          "gpt-3-encoder/**",
          "node-gyp-build/**"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/favicon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico",
      "artifactName": "ContextCraft-${version}-${arch}-${name}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "deleteAppDataOnUninstall": true,
      "artifactName": "ContextCraft-${version}-${arch}-setup.${ext}"
    },
    "portable": {
      "artifactName": "ContextCraft-${version}-${arch}-portable.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Development",
      "icon": "public/favicon.png"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/tiktoken/**",
      "node_modules/jsdom/**",
      "node_modules/chokidar/**",
      "node_modules/tree-sitter*/**"
    ],
    "publish": {
      "provider": "github",
      "releaseType": "draft"
    }
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@electron/rebuild": "^3.7.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/css-modules": "^1.0.5",
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.5",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron": "^34.3.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.4",
    "gpt-3-encoder": "^1.1.4",
    "ignore": "^7.0.3",
    "jsdom": "^26.0.0",
    "lucide-react": "^0.477.0",
    "micromatch": "^4.0.8",
    "minimatch": "^10.0.1",
    "prismjs": "^1.30.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-simple-code-editor": "^0.14.1",
    "sonner": "^2.0.3",
    "tiktoken": "^1.0.20",
    "tree-sitter": "^0.22.4",
    "tree-sitter-css": "^0.23.2",
    "tree-sitter-html": "^0.23.2",
    "tree-sitter-javascript": "^0.23.1",
    "tree-sitter-python": "^0.23.6",
    "tree-sitter-typescript": "^0.23.2"
  },
  "overrides": {
    "esbuild": "^0.25.0",
    "vite": {
      "esbuild": "^0.25.0"
    },
    "@babel/helpers": "^7.26.10",
    "tree-sitter": "^0.22.4",
    "tree-sitter-html": {
      "tree-sitter": "^0.22.4"
    }
  }
}
